@model Assignment2_PK_TT.Models.ViewModels.FileInputViewModel


@{
    ViewData["Title"] = "Upload";
}

<h1>Upload</h1>
<h3>Upload an add for: @Model.SportClubTitle</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">

            <input type="hidden" asp-for="SportClubId" />

            <div class="form-group">
                <label for="file">Choose a file:</label>
                <input type="file" name="File" id="file" accept=".jpg, .jpeg, .png" />
            </div>

    @if (ViewData.ContainsKey("ErrorMessage"))
    {
        <div class="text-danger">
            @ViewData["ErrorMessage"]
        </div>
    }

            <div class="form-group">
                <button type="submit" name="upload" class="btn btn-primary">Upload Now</button>
            </div>
        </form>
    </div>
</div>

<div><a asp-action="Index" asp-route-id="@Model.SportClubId">Back to List</a></div>
