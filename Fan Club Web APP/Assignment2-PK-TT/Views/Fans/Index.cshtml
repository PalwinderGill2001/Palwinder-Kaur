@model Assignment2_PK_TT.Models.ViewModels.FanSubscriptionViewModel;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Birth Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Fans)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.Id">Select</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="EditSubscription" asp-route-id="@item.Id">Edit Subscription</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@if (Model.SportsClubs != null)
{
    <h3>
        Member of the following SportClubs:
    </h3>
    <table class="table">
        <tr>
            @if (Model.SportsClubs.Count() > 0)
            {
                <th> Name </th>
            }
            else
            {
                <th> No subscription record exist. </th>
            }
        </tr>
        @foreach (var club in Model.SportsClubs)
        {
            <tr>
                <td>
                    @club.Title
                </td>
            </tr>
        }
    </table>
}